extends layout.pug

block content 
  article.grid-container.portfolio-intro
    div
      h1 Let's build apps to make the world a better place for everyone!
      p.lead.text-light
        | Projects built for the TeamTreehouse fullstack JavaScript developer techdegree.
  article.grid-container.portfolio-index
    .grid-x.grid-margin-x.small-up-2.medium-up-2.large-up-3
      each project in projects
        .cell
          a(href=`/project/${project.id}`)
            img.thumbnail(src=`/static/img/project${project.id}-thumb.jpg`)
            h5= project.project_name
